{
	"manifest_version": 2,
	"name": "drink-water",
	"version": "1.0.0",
	"description": "小鸭子叫你喝水啦~~~",
	"icons":{
		"16": "./img/icon.png",
		"48": "./img/icon.png",
		"128": "./img/icon.png"
	},
  "browser_action":{
		"default_icon": "./img/icon.png",
		"default_title": "快喝水，每天八杯水~",
		"default_popup": "./popup.html"
	},
	"background": {
			"page": "./background.html"
	},
	"permissions": [
		"notifications",
		"webRequestBlocking",
		"storage"
	]
}
